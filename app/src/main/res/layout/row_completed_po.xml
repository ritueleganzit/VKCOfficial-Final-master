<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"

    app:cardUseCompatPadding="true">



    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/lin_profile"
                android:padding="5dp"
                >

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:text="Vendor Name"
                        android:fontFamily="@font/poppins_regular"

                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="end"
                        android:text="Sun Stitching Works"
                        />


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/poppins_regular"

                        android:text="PO Number"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:text="4500698223 "
                        android:gravity="end"
                        android:fontFamily="@font/poppins_regular"

                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </TableRow> <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:fontFamily="@font/poppins_regular"

                    android:text="Article"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="13916 Ladies Blk "
                    android:gravity="end"
                    android:fontFamily="@font/poppins_regular"

                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    />


            </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_weight="50"
                        android:text="Date"
                        android:fontFamily="@font/poppins_regular"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_regular"

                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="12/02/2019"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:fontFamily="@font/poppins_regular"

                        android:text="Complete"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_regular"

                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="50"
                        android:text="50%"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </TableRow>


            </TableLayout>


            <ImageView
                android:id="@+id/lin_arrow"

                android:background="@color/colorPrimaryDark"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"

                android:layout_width="18dp"
                android:layout_height="match_parent"
                />


        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>